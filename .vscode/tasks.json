    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "make",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "Update",
            "type": "shell",
            "command": "make;make update",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "Reset",
            "type": "shell",
            "command": "make reset",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}